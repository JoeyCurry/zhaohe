/* pages/tools/index.wxss */
.tools-container {
  display: flex;
  flex-wrap: wrap;
}

.tools-card-container {
  flex: 0 0 50%;
  height: 100rpx;
}

.tools-card {
  flex: 1;
  margin: 10px;
  height: 100%;
  border-radius: 4px;
  border: 1px solid #e3e3e3;
  display: flex;
  align-items: center;
  padding-left: 10px;
}

.tools-card-container :active {
  flex: 0 0 50%;
  height: 100rpx;
  background-color: #e9e9e9;
}

.tools-card :active {
  background-color: #e9e9e9;
}

.tools-card-image {
  height: 40rpx;
  width: 40rpx;
  margin-right: 5px
}